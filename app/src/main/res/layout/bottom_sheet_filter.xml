<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/accent"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by Genre"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/card_medium"
            android:layout_marginBottom="16dp"/>

        <!-- Multi-line Wrapping ChipGroup (No Scroll!) -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleLine="false"
            app:singleSelection="false"
            app:chipSpacingHorizontal="10dp"
            app:chipSpacingVertical="10dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_adventure"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adventure"
                app:chipBackgroundColor="@color/card_light"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_romance"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Romance"
                app:chipBackgroundColor="@color/card_light"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_fantasy"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fantasy"
                app:chipBackgroundColor="@color/card_light"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_mystery"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mystery"
                app:chipBackgroundColor="@color/card_light"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_scifi"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sci-Fi"
                app:chipBackgroundColor="@color/card_light"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_horror"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horror"
                app:chipBackgroundColor="@color/card_light"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_selfhelp"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Self-Help"
                app:chipBackgroundColor="@color/card_light"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_biography"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biography"
                app:chipBackgroundColor="@color/card_light"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_history"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                app:chipBackgroundColor="@color/card_light"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1.5dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_children"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Children"
                app:chipBackgroundColor="@color/card_light"
                app:chipStrokeColor="@color/chip_stroke_selector"
                app:chipStrokeWidth="1.5dp" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btn_clear"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear All"
                android:textColor="@color/accent" />

            <Button
                android:id="@+id/btn_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Apply"
                android:backgroundTint="@color/accent"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>