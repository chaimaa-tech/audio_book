<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#CC000000"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1F3F3D"/>
            <stroke
                android:width="1dp"
                android:color="@color/white"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

</layer-list>